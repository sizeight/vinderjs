{
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "@babel/eslint-parser",
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "arrow-body-style": 0,
    "react/jsx-filename-extension": 0,
    "react/function-component-definition": [2, { "namedComponents": "arrow-function" }]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
